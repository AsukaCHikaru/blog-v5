rself. My checklist will be:","position":{"start":{"line":37,"column":1,"offset":2168},"end":{"line":37,"column":500,"offset":2667}}}]},{"type":"list","ordered":false,"start":null,"spread":false,"children":[{"type":"listItem","spread":false,"checked":null,"children":[{"type":"paragraph","children":[{"type":"link","title":null,"url":"https://github.com/facebook/prop-types","children":[{"type":"text","value":"prop-types","position":{"start":{"line":39,"column":4,"offset":2672},"end":{"line":39,"column":14,"offset":2682}}}],"position":{"start":{"line":39,"column":3,"offset":2671},"end":{"line":39,"column":55,"offset":2723}}}],"position":{"start":{"line":39,"column":3,"offset":2671},"end":{"line":39,"column":55,"offset":2723}}}],"position":{"start":{"line":39,"column":1,"offset":2669},"end":{"line":39,"column":55,"offset":2723}}},{"type":"listItem","spread":false,"checked":null,"children":[{"type":"paragraph","children":[{"type":"link","title":null,"url":"https://reactjs.org/docs/typechecking-with-proptypes.html#default-prop-values","children":[{"type":"text","value":"defaultProps","position":{"start":{"line":40,"column":4,"offset":2727},"end":{"line":40,"column":16,"offset":2739}}}],"position":{"start":{"line":40,"column":3,"offset":2726},"end":{"line":40,"column":96,"offset":2819}}}],"position":{"start":{"line":40,"column":3,"offset":2726},"end":{"line":40,"column":96,"offset":2819}}}],"position":{"start":{"line":40,"column":1,"offset":2724},"end":{"line":40,"column":96,"offset":2819}}},{"type":"listItem","spread":false,"checked":null,"children":[{"type":"paragraph","children":[{"type":"link","title":null,"url":"https://redux.js.org/","children":[{"type":"text","value":"redux","position":{"start":{"line":41,"column":4,"offset":2823},"end":{"line":41,"column":9,"offset":2828}}}],"position":{"start":{"line":41,"column":3,"offset":2822},"end":{"line":41,"column":33,"offset":2852}}}],"position":{"start":{"line":41,"column":3,"offset":2822},"end":{"line":41,"column":33,"of